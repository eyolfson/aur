pkgname=python2-pygments-style-solarized
basename=pygments-style-solarized
pkgver=0.1.1
pkgrel=1
pkgdesc="Pygment style plugin featuring Solarized."
arch=('any')
url="https://github.com/shkumagai/pygments-style-solarized/"
license=('MIT')
depends=('python2' 'python2-pygments')
makedepends=('python2-setuptools')
source=("https://github.com/shkumagai/$basename/archive/$pkgver.tar.gz")
sha256sums=('6a21a97dd89249aea686100d5ba35155382b566b05a984df7ead9a3360894a13')

package() {
  cd "$srcdir/$basename-$pkgver"
  python2 setup.py install --root="$pkgdir" --optimize=1
}
