# Maintainer: Jon Eyolfson <jon@eyolfson.com>
pkgname=emacs-powerline
_emacs_pkgname=powerline
pkgver=2.4
pkgrel=1
pkgdesc="A better mode-line for Emacs"
url="https://github.com/milkypostman/powerline"
arch=('any')
license=('GPLv2')
depends=('emacs')
source=("https://github.com/milkypostman/${_emacs_pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('cb4fff38648913f865c7085c9ab9708468940c3d05a8aee1b1d77fb96630c0c5')

package() {
  install -d "${pkgdir}/usr/share/emacs/site-lisp/${_emacs_pkgname}"
  cp -a "${srcdir}/${_emacs_pkgname}-${pkgver}/"*".el" "${pkgdir}/usr/share/emacs/site-lisp/${_emacs_pkgname}"
}
