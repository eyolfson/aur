# Maintainer: Jon Eyolfson <jon@eyolfson.com>
pkgname=emacs-rich-minority
_emacs_pkgname=rich-minority
pkgver=1.0.1
pkgrel=1
pkgdesc="Emacs package for hiding and/or highlighting the list of minor-modes in the mode-line"
url="https://github.com/Malabarba/rich-minority"
arch=('any')
license=('GPLv2')
depends=('emacs')
source=("https://github.com/Malabarba/${_emacs_pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('1be595279f74b4ffc4e8b9b07fe99496bf69f515a434ecb84528fa7930580cd0')

package() {
  install -d "${pkgdir}/usr/share/emacs/site-lisp/${_emacs_pkgname}"
  cp -a "${srcdir}/${_emacs_pkgname}-${pkgver}/"*".el" "${pkgdir}/usr/share/emacs/site-lisp/${_emacs_pkgname}"
}
