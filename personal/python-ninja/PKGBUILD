# Maintainer: Jon Eyolfson <eyolfson@gmail.com>
pkgname=python-ninja
pkgver=1.10.0.post2
pkgrel=1
pkgdesc="Python wrapper for ninja"
arch=('any')
url="https://github.com/scikit-build/ninja-python-distributions"
license=('Apache')
makedepends=('python-setuptools' 'python-skbuild')
source=("https://github.com/scikit-build/ninja-python-distributions/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('8e1bac7b9df2b611b654eff17daf4416a9ef6ddebd8ee5355549ee3947c162447a2cd9b66852a4ffd26f9e4d466d259a6184babd987b3c4495d0718adb54eb8c')

build() {
    cd "$srcdir/ninja-python-distributions-$pkgver"
    python setup.py build
}

package() {
    cd "$srcdir/ninja-python-distributions-$pkgver"
    python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}
