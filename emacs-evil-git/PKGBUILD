pkgname=emacs-evil-git
pkgver=r1497
pkgrel=1
pkgdesc="An extensible vi layer for Emacs"
arch=('any')
url="https://gitorious.org/evil/pages/Home"
license=('GPLv2')
makedepends=('git')
depends=('emacs' 'emacs-undo-tree')
conflicts=('emacs-evil')
provides=('emacs-evil')
source=("$pkgname"::'git://gitorious.org/evil/evil.git')
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  printf "r%s" "$(git rev-list --count HEAD)"
}

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  install -d $pkgdir/usr/share/emacs/site-lisp/evil
  cp $srcdir/$pkgname/*.el* $pkgdir/usr/share/emacs/site-lisp/evil
}
