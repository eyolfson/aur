# Maintainer: Jon Eyolfson <jon@eyolfson.com>
pkgname=emacs-smart-mode-line
_emacs_pkgname=smart-mode-line
pkgver=2.10.1
pkgrel=1
pkgdesc="A powerful and beautiful mode-line for Emacs"
url="https://github.com/Malabarba/smart-mode-line"
arch=('any')
license=('GPLv2')
depends=('emacs' 'emacs-rich-minority')
source=("https://github.com/Malabarba/${_emacs_pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('88223ead7fe7848064bbe1c174c3c0c0cd108ca8000b821aff52e7bc94543c45')

package() {
  install -d "${pkgdir}/usr/share/emacs/site-lisp/${_emacs_pkgname}"
  install -d "${pkgdir}/usr/share/emacs/site-lisp/${_emacs_pkgname}/themes"
  cp -a "${srcdir}/${_emacs_pkgname}-${pkgver}/"*".el" "${pkgdir}/usr/share/emacs/site-lisp/${_emacs_pkgname}"
  cp -a "${srcdir}/${_emacs_pkgname}-${pkgver}/themes/"*".el" "${pkgdir}/usr/share/emacs/site-lisp/${_emacs_pkgname}/themes"
}
