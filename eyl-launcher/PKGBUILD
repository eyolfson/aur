# Maintainer: Jon Eyolfson <jon@eyl.io>

pkgname=eyl-launcher
pkgver=0.0.2
pkgrel=1
pkgdesc="A minimalistic application launcher for Linux"
arch=('x86_64')
url="https://github.com/eyolfson/eyl-launcher/"
license=('GPL3')
depends=('pango' 'sdl2')
source=("https://github.com/eyolfson/$pkgname/archive/v$pkgver.tar.gz")
sha256sums=('e13529ab737070f5751f3da615cced24a0bb3d65d3c5351a3631a56aa522ff87')

build() {
  cd "$pkgname-$pkgver"
  mkdir build
  cd build
  cmake ..
  make
}

package() {
  mkdir -p "$pkgdir/usr/bin"
  install -m 755 "$srcdir/$pkgname-$pkgver/build/bin/eyl-launcher" "$pkgdir/usr/bin/eyl-launcher"
}
